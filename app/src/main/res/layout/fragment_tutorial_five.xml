<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="@color/cardview_dark_background">
    <android.support.v7.widget.CardView
        android:id="@+id/tutorial_card_background"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_weight="2"
        app:cardBackgroundColor="#ffdf9b30"
        app:cardElevation="10dp">
        <ImageView
            android:id="@+id/tutorial_image_five"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:layout_weight="2"
            android:src="@drawable/tutorial_image_5"
            android:scaleType="centerInside"/>
    </android.support.v7.widget.CardView>
    <TextView
        android:id="@+id/tutorial_description"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="8"
        android:textColor="@color/white"
        android:background="@color/cardview_dark_background"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="Manage your wallet. Keep track of your daily income and expenses"
        android:gravity="center"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">
    </LinearLayout>
</LinearLayout>