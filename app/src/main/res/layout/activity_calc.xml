<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_grey"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.CardView
        android:id="@+id/txtResultIdCard"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        app:cardElevation="6dp">
        <TextView
            android:id="@+id/txtResultId"
            android:layout_width="fill_parent"
            android:layout_height="160dp"
            android:background="@color/colorPrimary"
            android:gravity="end|center_vertical"
            android:textColor="@color/white"
            android:textSize="35sp"
            android:padding="10dp"/>
    </android.support.v7.widget.CardView>

    <!--<LinearLayout
        android:id="@+id/calc_divider"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_below="@id/txtResultIdCard"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">
    </LinearLayout>-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/calc_action_buttons"
        android:layout_below="@id/txtResultIdCard"
        android:orientation="horizontal"
        android:layout_margin="5dp"
        android:weightSum="4">
        <TableLayout
            android:id="@+id/tableId"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="3">
            <TableRow
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:weightSum="4">
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    app:cardCornerRadius="5dp"
                    android:layout_margin="3dp"
                    app:cardBackgroundColor="@color/white">
                    <Button
                        android:id="@+id/btnClearId"
                        android:text="Clear"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="?attr/selectableItemBackground"/>
                </android.support.v7.widget.CardView>
            </TableRow>
            <TableRow
                android:layout_height="match_parent"
                android:layout_weight="1">
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:cardCornerRadius="5dp"
                    android:layout_margin="3dp"
                    app:cardBackgroundColor="@color/white">
                    <Button
                        android:id="@+id/btnNum7Id"
                        android:text="7"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="?attr/selectableItemBackground"
                        android:textSize="@dimen/calc_button_txt_size"/>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="3dp"
                    app:cardCornerRadius="5dp"
                    app:cardBackgroundColor="@color/white">
                    <Button
                        android:id="@+id/btnNum8Id"
                        android:text="8"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="?attr/selectableItemBackground"
                        android:textSize="@dimen/calc_button_txt_size"/>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:cardCornerRadius="5dp"
                    android:layout_margin="3dp"
                    app:cardBackgroundColor="@color/white">
                    <Button
                        android:id="@+id/btnNum9Id"
                        android:text="9"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="?attr/selectableItemBackground"
                        android:textSize="@dimen/calc_button_txt_size"/>
                </android.support.v7.widget.CardView>
            </TableRow>
            <TableRow
                android:layout_height="match_parent"
                android:layout_weight="1">
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:cardCornerRadius="5dp"
                    android:layout_margin="3dp"
                    app:cardBackgroundColor="@color/white">
                    <Button
                        android:id="@+id/btnNum4Id"
                        android:text="4"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="?attr/selectableItemBackground"
                        android:textSize="@dimen/calc_button_txt_size"/>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:cardCornerRadius="5dp"
                    android:layout_margin="3dp"
                    app:cardBackgroundColor="@color/white">
                    <Button
                        android:id="@+id/btnNum5Id"
                        android:text="5"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="?attr/selectableItemBackground"
                        android:textSize="@dimen/calc_button_txt_size"/>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:cardCornerRadius="5dp"
                    android:layout_margin="3dp"
                    app:cardBackgroundColor="@color/white">
                    <Button
                        android:id="@+id/btnNum6Id"
                        android:text="6"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="?attr/selectableItemBackground"
                        android:textSize="@dimen/calc_button_txt_size"/>
                </android.support.v7.widget.CardView>
            </TableRow>
            <TableRow
                android:layout_height="match_parent"
                android:layout_weight="1">
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:cardCornerRadius="5dp"
                    android:layout_margin="3dp"
                    app:cardBackgroundColor="@color/white">
                    <Button
                        android:id="@+id/btnNum1Id"
                        android:text="1"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="?attr/selectableItemBackground"
                        android:textSize="@dimen/calc_button_txt_size"/>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:cardCornerRadius="5dp"
                    android:layout_margin="3dp"
                    app:cardBackgroundColor="@color/white">
                    <Button
                        android:id="@+id/btnNum2Id"
                        android:text="2"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="?attr/selectableItemBackground"
                        android:textSize="@dimen/calc_button_txt_size"/>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:cardCornerRadius="5dp"
                    android:layout_margin="3dp"
                    app:cardBackgroundColor="@color/white">
                    <Button
                        android:id="@+id/btnNum3Id"
                        android:text="3"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="?attr/selectableItemBackground"
                        android:textSize="@dimen/calc_button_txt_size"/>
                </android.support.v7.widget.CardView>
            </TableRow>
            <TableRow
                android:layout_height="match_parent"
                android:layout_weight="1">
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:cardCornerRadius="5dp"
                    android:layout_margin="3dp"
                    app:cardBackgroundColor="@color/white">
                    <Button
                        android:id="@+id/btnNum0Id"
                        android:text="0"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:background="?attr/selectableItemBackground"
                        android:textSize="@dimen/calc_button_txt_size"/>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="5dp"
                    android:layout_weight="1"
                    android:layout_margin="3dp"
                    app:cardBackgroundColor="@color/white">
                    <Button
                        android:id="@+id/btnDecimal"
                        android:text="."
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:background="?attr/selectableItemBackground"
                        android:textSize="@dimen/calc_button_txt_size"/>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="5dp"
                    android:layout_weight="1"
                    android:layout_margin="3dp"
                    app:cardBackgroundColor="@color/white">
                    <Button
                        android:id="@+id/btnDelId"
                        android:text="C"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:background="?android:attr/selectableItemBackground"
                        android:textSize="@dimen/calc_button_txt_size" />
                </android.support.v7.widget.CardView>

            </TableRow>
        </TableLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:cardCornerRadius="5dp"
                android:layout_margin="3dp"
                android:clickable="true"
                app:cardBackgroundColor="@color/white">
                <Button
                    android:id="@+id/btnDivId"
                    android:text="/"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:background="?attr/selectableItemBackground"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/calc_button_txt_size"/>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:cardCornerRadius="5dp"
                android:layout_margin="3dp"
                app:cardBackgroundColor="@color/white">
                <Button
                    android:id="@+id/btnMulId"
                    android:text="*"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?attr/selectableItemBackground"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/calc_button_txt_size"/>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:cardCornerRadius="5dp"
                android:layout_margin="3dp"
                app:cardBackgroundColor="@color/white">
                <Button
                    android:id="@+id/btnSubId"
                    android:text="-"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?attr/selectableItemBackground"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/calc_button_txt_size"/>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:cardCornerRadius="5dp"
                android:layout_margin="3dp"
                app:cardBackgroundColor="@color/white">
                <Button
                    android:id="@+id/btnAddId"
                    android:text="+"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?attr/selectableItemBackground"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/calc_button_txt_size"/>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="5dp"
                android:layout_margin="3dp"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/colorPrimary">
                <Button
                    android:id="@+id/btnEqualId"
                    android:text="="
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:background="?attr/selectableItemBackground"
                    android:textSize="@dimen/calc_button_txt_size"
                    android:textColor="@color/white"/>
            </android.support.v7.widget.CardView>
            <!--<android.support.design.widget.FloatingActionButton
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:src="@drawable/equal">
            </android.support.design.widget.FloatingActionButton>-->
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/calc_action_buttons"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:weightSum="2">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:id="@+id/button"
            android:layout_weight="1"
            android:background="@color/white"
            android:onClick="onCancel"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Done"
            android:id="@+id/button2"
            android:layout_weight="1"
            android:background="@color/white"
            android:onClick="onDone"/>
    </LinearLayout>
</RelativeLayout>